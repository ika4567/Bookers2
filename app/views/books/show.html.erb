<div class="container">
  <div class="row">

<!--部分テンプレート-->
    <div class="col-md-3">
      <%= render 'users/userinfo', user: @book.user %>
      <%= render 'new', book: @book %>
    </div>

<!--Book#show-->
    <div class="col-md-9">
      <h2>Book detail</h2>

      <table class="table">
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
              <%= image_tag @book.user.get_profile_image("50x50") %><br>
              <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger btn-sm" %></td>
          </tr>
      </table>

    </div>
  </div>
</div>