<h2>New book</h2>
<%= form_with model: book, local:true do |f| %>
<div class="field">
  <%= f.label "Title" %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label "Opinion" %><br>
  <%= f.text_area :body %>
</div>
  <%= f.submit "Create Book", class: "btn btn-success" %>
<% end %>