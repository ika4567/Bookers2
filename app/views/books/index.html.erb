<div class="container">
  <div class="row">

<!--部分テンプレート-->
    <div class="col-md-3" style="background-color: palegreen;">
      <%= render 'users/userinfo', user: @user %>
      <%= render 'new', book: @book %>
    </div>

<!--Books#index-->
    <div class="col-md-9">
      <h2>Books</h2>

      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user.id) do %>
              <%= image_tag book.user.get_profile_image("50x50") %></td>
              <% end %>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>


