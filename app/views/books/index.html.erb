<div class="container">
  <div class="row">

<!--部分テンプレート-->
    <div class="col-md-3" style="background-color: yellow;">

      <h1>User info</h1>

      <p>name</p>
      <%= image_tag @user.get_profile_image("50x50") %>
      <%= @user.name %>
      <p>introduction</p>
      <%= @user.introduction %>
      <div>edit</div>


      <h1>New book</h1>
      <%= form_with model: Book.new, local:true do |f| %>
      <div class="field">
        <%= f.label "Title" %><br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label "Opinion" %><br>
        <%= f.text_area :body %>
      </div>
        <%= f.submit "Create Book" %>
      <% end %>
    </div>

<!--Books#index-->
    <div class="col-md-9">
      <h1>Books</h1>

      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user.id) do %>
              <%= image_tag book.user.get_profile_image("50x50") %></td>
              <% end %>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>


