<div class="container px-5 px-sm-0">
  <div class="row">

<!--部分テンプレート-->
    <div class="col-md-3">
      <%= render 'userinfo', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>


<!--Books#index-->
    <div class="col-md-8 offset-md-1">

      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |users| %>
            <tr>
              <td><%= image_tag users.get_profile_image(50,50) %></td>
              <td><%= users.name %></td>
              <td><%= link_to "Show", user_path(users) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>