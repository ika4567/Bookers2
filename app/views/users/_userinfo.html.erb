<h2>User info</h2>
<table class="table">
  <tr><%= image_tag user.get_profile_image("50x50") %></tr>
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
</table>

<div class="btn btn-outline-secondary btn-block">
  <% if user == current_user%>
    <%= link_to "#edit", edit_user_path(user.id)%>
  <% else %>
    <%= link_to "#edit", user_path(user.id)%>
  <% end %>
</div>
