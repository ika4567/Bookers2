<h2>User info</h2>
<%= form_with model: @user, local:true do |f| %>
  <div class="field">
    <%= f.label "Name" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Image" %><br>
    <%= f.file_field :plofile_image, accept: "image/*" %>
  </div>
  <div class="field">
    <%= f.label "Introduction" %><br>
    <%= f.text_area :introduction %>
  </div>

  <%= f.submit "Update User", class: "btn btn-secondary" %>
<% end %>
