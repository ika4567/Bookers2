<div class="container">
  <div class="row">

<!--部分テンプレート-->
    <div class="col-md-3" style="background-color: palegreen;">
      <%= render 'userinfo', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>

<!--current_userの投稿一覧-->
    <div class="col-md-9">

      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user) do %>
              <%= image_tag book.user.get_profile_image("50x50") %></td>
              <% end %>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>