<!--部分テンプレート-->

<!--current_userの投稿一覧-->
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to image_tag book.user.get_profile_image("50x50"), user_path([:id]) %></td>
        <td><%= link_to book.title, book_path([:id]) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>

</table>